<h1><%= article.title %> <small>by <%= article.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<p><%= article.content %></p>

<h4>Comments</h4>
<% if(article.comments.length > 0) { %>
  <% article.comments.forEach(comment => { %>
    <div class="well">
      <p><strong><%= comment.name %> says:</strong></p>
      <p><%= comment.content %></p>
    </div>
  <% }); %>
<% } %>

<hr />

<!-- comment form here -->
<h5>Comment here:</h5>

<form action="/articles/<%=article.id %>" method="POST">
  <div class="form-group">
    <label for="commenter">Name</label>
    <input type="text" class="form-control" id="commenter" name="name" required>
  </div>

  <div class="form-group">
    <label for="content">Content</label>
    <textarea type="text" class="form-control" id="content" name="content" required></textarea>
  </div>

  <input type="submit" class="btn btn-primary" value="Comment">
</form>


